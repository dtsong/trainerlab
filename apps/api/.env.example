# Backend environment variables
# Copy to .env and fill in values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/trainerlab

# TCGdex (public API â€” override for self-hosted)
TCGDEX_URL=https://api.tcgdex.net/v2

# OpenAI (for embeddings - optional for initial dev)
# OPENAI_API_KEY=sk-...

# Pipeline auth (bypass scheduler OIDC verification for local dev)
SCHEDULER_AUTH_BYPASS=true

# Auth (NextAuth.js shared secret for JWT verification)
# Must match NEXTAUTH_SECRET in the frontend
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# Kernel (cloud browser for JS-heavy JP sites)
KERNEL_API_KEY=

# Prod access (for ./tl prod * commands)
# PROD_PROJECT=trainerlab-prod
# PROD_REGION=us-west1
# PROD_INSTANCE=trainerlab-db
# PROD_DB_USER=trainerlab_dev
# PROD_OPS_SA=trainerlab-ops@trainerlab-prod.iam.gserviceaccount.com
