# TrainerLab Terraform Variables Example
# Copy this file to terraform.tfvars and customize for your environment
#
# Most variables have sensible defaults and don't need to be set.
# Only override if you need different values.

# GCP Configuration
# project_id  = "trainerlab-prod"  # Default, uncomment to override
# region      = "us-west1"          # Default, uncomment to override
# environment = "prod"              # Default, uncomment to override

# =============================================================================
# Operations Team (Most Common Override)
# =============================================================================

# Users allowed to impersonate the operations service account
# Add your email here to run manual scraper tests in production
operations_admins = [
  "your.email@example.com",
  # "team.member@example.com",
]

# =============================================================================
# Optional Overrides (Uncomment if Needed)
# =============================================================================

# Docker Image
# api_image = "us-west1-docker.pkg.dev/trainerlab-prod/trainerlab-api/api:abc123"

# Custom Domain
# custom_domain = "api.trainerlab.app"

# CORS Origins
# cors_origins = "https://trainerlab.app,https://www.trainerlab.app"

# Database Configuration
# db_tier      = "db-custom-2-8192"  # 2 vCPU, 8GB RAM
# db_disk_size = 50                   # 50GB SSD

# External Services
# redis_url  = "redis://memorystore-ip:6379"
# tcgdex_url = "https://api.tcgdex.net/v2"

# Scheduler Settings
# timezone         = "America/Los_Angeles"
# scheduler_paused = true

# GitHub Repository
# github_repo = "your-org/trainerlab"
